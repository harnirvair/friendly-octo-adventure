<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dilip3.myapplication.MainActivity">

    <TextView
        android:id="@+id/tvInstalledApplications"
        android:layout_width="wrap_content"
        android:padding="2dp"
        android:paddingStart="4dp"
        android:layout_height="27dp"
        android:text="Installed Applications"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/tvsafecount"
        android:layout_width="match_parent"
        android:paddingStart="4dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvunknowncount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:paddingStart="4dp"
        android:textSize="16sp"
        android:text="TextView" />

    <ListView
        android:id="@+id/InstalledApplicationList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
</LinearLayout>
